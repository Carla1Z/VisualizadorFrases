<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="VisualizadorFrases.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Grid x:Name="background">
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1">
                <GradientStopCollection>
                    <GradientStop Offset="0" Color="#b9fbc0" />
                    <GradientStop Offset="0.25" Color="#8eecf5" />
                    <GradientStop Offset="0.50" Color="#cfbaf0" />
                    <GradientStop Offset="0.75" Color="#ffcfd2" />
                    <GradientStop Offset="1" Color="#fbf8cc" />
                </GradientStopCollection>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid Margin="25" RowDefinitions=".8*,.2*">
            <Label
                FontFamily="MainFont"
                FontSize="50"
                HorizontalTextAlignment="Center"
                Text="Hola Mundo - Carla"
                TextColor="White"
                VerticalOptions="Center" />
            <Button
                x:Name="btnGenerateQuote"
                Grid.Row="1"
                BackgroundColor="Black"
                Clicked="btnGenerateQuote_Clicked"
                Opacity=".4"
                Text="Obtenga una nueva frase" />
        </Grid>
    </Grid>

</ContentPage>
